<?xml version="1.0" encoding="utf-8"?>
<!-- 查询参数 -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:text="@string/date"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/datebegin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_bg"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/calendar"
            android:gravity="center_vertical"
            android:labelFor="@+id/datebegin"
            android:padding="5dp"
            android:textAlignment="gravity"
            android:focusable="true"
            android:drawableLeft="@drawable/calendar" />

    


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:text="@string/time"
/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/timebegin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_bg"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/calendar"
            android:gravity="center_vertical"
            android:labelFor="@+id/timebegin"
            android:padding="5dp"
            android:textAlignment="gravity"
            android:focusable="true"
            android:drawableLeft="@drawable/calendar" />
    </LinearLayout>

<LinearLayout
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:text="@string/xianti"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/xiantidata"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_bg"
            android:clickable="true"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/xianti"
            android:gravity="center_vertical"
            android:labelFor="@+id/xiantidata"
            android:padding="5dp"
            android:drawableLeft="@drawable/xianti"
            android:focusable="true" />
        <!-- android:spinnerMode="dropdown"  dropdown为下拉菜单 dialog为弹出框 -->
        <!-- 其中android:entries="@array/xianti_list"表示Spinner的数据集合是从资源数组xianti_list中获取的，xianti_list数组资源定义在values/xianti_list.xml中： -->
</LinearLayout>

</LinearLayout>