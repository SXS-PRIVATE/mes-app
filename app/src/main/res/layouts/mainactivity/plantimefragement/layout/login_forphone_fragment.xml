<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.shu.messystem.component.TitleBar

            android:visibility="gone"
            android:id="@+id/login_title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.shu.messystem.component.ClearEditText
                android:id="@+id/login_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_bg"
                android:drawableLeft="@drawable/login_phone_3x"
                android:drawableRight="@drawable/clear_gray_3x"
                android:drawableEnd="@drawable/clear_gray_3x"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/login_phone_3x"
                android:hint="输入手机号"

                android:inputType="phone"
                android:padding="10dp"
                android:textColor="@color/font_color3"
                android:textColorHint="@color/hint_color"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_marginBottom="70dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.shu.messystem.component.ClearEditText

                    android:id="@+id/login_code"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="0.5"
                    android:inputType="number"
                    android:drawableRight="@drawable/clear_gray_3x"
                    android:drawableEnd="@drawable/clear_gray_3x"
                    android:maxLength="6"
                    android:background="@drawable/edit_bg"
                    android:drawableLeft="@drawable/login_code_3x"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/login_code_3x"
                    android:hint="请输入验证码"
                    android:padding="10dp"
                    android:textColor="@color/font_color3"
                    android:textColorHint="@color/hint_color"
                    android:textSize="12sp" />

                <Button
                    android:minHeight="0dp"
                    android:id="@+id/send_code"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@drawable/getcode_bt_bgcolor"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="获取验证码"
                    android:textColor="@drawable/getcode_bt_fontcolor"
                    android:textSize="12sp" />
            </LinearLayout>

            <Button
                android:id="@+id/login_bt"
                android:textColor="@color/white"
                android:layout_marginBottom="150dp"
                android:text="登录"
                android:background="@drawable/button_bg_green"
                android:layout_width="match_parent"
                android:layout_height="35dp" />

            <LinearLayout
                android:id="@+id/other_login_tip"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_weight="0.33"
                    android:background="@color/bg3"
                    android:layout_width="1dp"
                    android:layout_height="1px" />

                <TextView
                    android:gravity="center"
                    android:layout_weight="0.33"
                    android:textColor="@color/font_color2"
                    android:text="其他身份登录"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_weight="0.33"
                    android:background="@color/bg3"
                    android:layout_width="1dp"
                    android:layout_height="1px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/other_login"
                android:layout_margin="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/jiamengshang"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="@string/jiamengs"
                    android:textColor="@color/enable_color" />

                <TextView
                    android:id="@+id/hehuoren"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="@string/hehuoren"
                    android:textColor="@color/enable_color" />

                <TextView
                    android:id="@+id/kuaidiyuan"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="@string/kuaisongy"
                    android:textColor="@color/enable_color" />

                <TextView
                    android:id="@+id/guanliyuan"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="@string/guanliyuan"
                    android:textColor="@color/enable_color" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>