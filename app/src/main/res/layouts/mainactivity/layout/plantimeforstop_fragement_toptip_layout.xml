<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.shu.messystem.component.TopTips.view.TipRelativeLayout
        android:id="@+id/rl_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5531d"
        android:padding="2dp">
        <ImageView
            android:id="@+id/tip_img"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/engineererror"
            android:contentDescription="" />
        <TextView
            android:textSize="18sp"
            android:gravity="center"
            android:id="@+id/tip_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_video_title"
            android:layout_toEndOf="@+id/iv_video_image"
            android:text="错误提示"
            android:textColor="#ffffff" />
    </com.shu.messystem.component.TopTips.view.TipRelativeLayout>

</LinearLayout>